model MixTest {
  random IntVar observation ?: fixedInt(2)
  param RealVar lambda ?: latentReal
  param RealVar rho ?: latentReal
  param Simplex proportions ?: fixedSimplex(0.5, 0.5)
  laws {
    lambda ~ Exponential(1.0)
    rho ~ Exponential (1.0)
    observation | proportions, lambda, rho 
      ~ IntMixture(
        proportions, 
        #[
          Poisson::distribution(lambda), 
          YuleSimon::distribution(rho)
        ]
      )
  }
}